@model BudgetManager.Models.Category

@{
    ViewData["Title"] = "New category";
}

<div class="forms">
    <div class="card">
        <div class="card-header alert alert-success">
            <h6>
                <i class="fas fa-exclamation-triangle"></i> &emsp; Register a new category
            </h6>
        </div>

        <form asp-action="Create">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Save" class="btn btn-success btn-sm"/>&emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
