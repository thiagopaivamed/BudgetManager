@model BudgetManager.Models.Category

@{
    ViewData["Title"] = "Update the category " + Model.Name;
}

<div class="forms">
    <div class="card">
        <div class="card-header alert alert-info">
            <h6>
                <i class="fas fa-exclamation-triangle"></i> &emsp; Update @Model.Name category
            </h6>
        </div>

        <form asp-action="Edit">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary btn-sm"/> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
